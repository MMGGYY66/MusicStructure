                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/song1"
                    style="@style/songTitle"/>

                <ImageView
                    android:layout_width="@dimen/width_MusicLibraryButtons"
                    android:layout_height="@dimen/height_MusicLibraryButtons"
                    android:src="@drawable/nowplaying_inactive"
                    style="@style/musicLibraryButtons"/>

                <ImageView
                    android:layout_width="@dimen/width_MusicLibraryButtons"
                    android:layout_height="@dimen/height_MusicLibraryButtons"
                    android:src="@drawable/playlist_inactive"
                    style="@style/musicLibraryButtons"/>

