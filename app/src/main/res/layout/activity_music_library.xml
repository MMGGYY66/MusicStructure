                    style="@style/musicLibraryButtons"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/musicLibraryActivity_TextView"
                style="@style/explanation_textView"/>

        </LinearLayout>

    </ScrollView>




